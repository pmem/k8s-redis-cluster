---
apiVersion: batch/v1
kind: Job
metadata:
  name: {{ job_name }}-
  namespace: {{ namespace }}
spec:
  backoffLimit: 3
  template:
    metadata:
      name: runtests
    spec:
      restartPolicy: Never
      terminationGracePeriodSeconds: 0
      containers:
      - name: generator
        image: redislabs/memtier_benchmark:edge
        imagePullPolicy: IfNotPresent
        envFrom:
          - configMapRef:
              name: memtier
        env:
          - name: podname
            valueFrom: {fieldRef: {fieldPath: metadata.name}}
        tty: true
        command:
          - bash
          - -c
          - >
            /usr/local/bin/memtier_benchmark
            --run-count={{ run_count }}
            --test-time=$test_time
            --server={{ cluster_ip }}
            --port=$port
            --threads=$threads
            --clients=$clients
            --pipeline=$pipeline
            --data-size=$datasize
            --key-pattern=$keypattern_load
            --key-maximum=$keymaximum_load
            --ratio=$ratio_load
            --randomize
            --distinct-client-seed
            --show-config
            --cluster-mode
            2>&1 | tee /log/{{ run_id }}_{{ namespace }}.txt
        volumeMounts:
        - mountPath: /log
          name: test-volume
      volumes:
      - name: test-volume
        hostPath:
          path: {{ client_results_dir }}
          type: DirectoryOrCreate
      nodeSelector:
        node-type: redis-client
